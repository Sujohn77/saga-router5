{
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "mocha": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:jsx-a11y/recommended", "plugin:import/errors", "plugin:import/warnings", "prettier"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 7,
        "sourceType": "module"
    },
    "plugins": ["react", "jsx-a11y", "react-hooks"],
    "settings": {
        "react": {
            "version": "16.4"
        }
    },
    "rules": {
        "indent": ["off", 4, { "SwitchCase": 1 }],
        "no-unused-vars": ["warn"],
        "eqeqeq": [1, "smart"],
        "linebreak-style": ["error", "unix"],
        "no-console": 0,
        "no-else-return": [1, { "allowElseIf": false }],
        "no-extra-boolean-cast": 0,
        "no-extra-semi": 1,
        "no-multi-spaces": 1,
        "no-undef": 1,
        "no-var": 2,
        "require-jsdoc": [
            1,
            {
                "require": {
                    "FunctionDeclaration": true,
                    "MethodDefinition": false,
                    "ClassDeclaration": false,
                    "ArrowFunctionExpression": false
                }
            }
        ],
        "no-trailing-spaces": [1, { "skipBlankLines": true }],
        "camelcase": [
            1,
            {
                "properties": "never"
            }
        ],
        "react/jsx-uses-vars": 1,
        "react/react-in-jsx-scope": 1,
        "react/prop-types": 0,
        "react/display-name": 0,
        "jsx-a11y/label-has-for": 0, // Depricated,
        "jsx-a11y/no-onchange": 0,
        "jsx-quotes": [1, "prefer-single"],
        "quotes": [1, "single", { "avoidEscape": true }],
        "no-case-declarations": [0],
        "no-useless-escape": [0],
        "import/no-unresolved": [0],
        "import/named": [0],
        "space-infix-ops": ["warn", { "int32Hint": false }],
        "no-prototype-builtins": [0],
        "lines-between-class-members": ["warn", "always", { "exceptAfterSingleLine": true }]
    }
}
